function [ class ] = MAP_2Class_Classifier( point, classes)
    function dist = calculateDist(point, mean, covar)
        dist = ((point - mean) * inv(covar) * (point'-mean'));
    end

    distances = [];
    for i=1:length(classes)
        class = classes(i)
        distances(i) = calculateDist(point, class.mean, class.covar);
    end
    
    rhs = 2*log(c/n_A) + log(det(covar_A)/det(covar_B));
    
    if distances(1)-distances(2) > rhs
        class=1;
    else
        class=2;
    end
end